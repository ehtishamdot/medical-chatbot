generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Token {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  token String
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  avatar    String?
  email     String   @unique
  password  String
  specialty String
  queries   Query[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Query {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  data      String
  isUser    Boolean
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?  @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Specialty {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phases    Phase[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Phase {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  specialtyId String    
  questions   Question[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  specialty   Specialty @relation(fields: [specialtyId], references: [id])
}

model Question {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  phaseId   String
  question  String
  priority  Int
  status    String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  phase     Phase?    @relation(fields: [phaseId], references: [id])
}
